@model IEnumerable<AjourBT.Domain.Entities.Position>

@{
    Layout = null;
    ViewBag.Title = "Position";
}

<script>
    $(function () {
        $("#CreatePosition").button();
    })
</script>

<div id="PositionData">
<p>
    <a class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" id="CreatePosition" href="/Position/Create"> Add Position </a>
</p>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TitleEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TitleUk)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.TitleEn, "Edit", new { id = item.PositionID }, new { @class = "posEditDialog" })
            </td>
            <td>
                @Html.ActionLink(item.TitleUk, "Edit", new { id = item.PositionID}, new { @class = "posEditDialog" })
            </td>
        </tr>
    }

</table>
    </div>
