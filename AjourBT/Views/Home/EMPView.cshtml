@using AjourBT.Infrastructure
@using System.Web.Configuration

<script type="text/javascript">

    $(document).ready(function () {

        $("#tabsEMP").tabs({ selected: '@Model' })
        $("li#EMPLink a").css({
            'color': '#E1701D'
        })    })
</script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<div id="tabsEMP" class="EMPTab">
    <ul>
        <li><a title="Information about Your BTs. Usefull for reporting" href="#tabs1">Your BTs</a></li>
        <li><a title="Information on Your passport, visa and permit status" href="#tabs2">Visa</a></li>

        @if (WebConfigurationManager.AppSettings["IncludeAbsence"] == "true")
        {
            <li><a title="Your absence data for selected period" href="#tabs3"> Absence</a></li>
        }

        <li><a title="Your overtime days, which may be reclaimed later" href="#tabs31">Days From BTs</a></li>
        <li><a title="The nearest birthdays of Your coworkers" href="#tabs5">Birthdays</a></li>

    </ul>
    <div id="tabs1">
        @{Html.RenderAction("GetLastBTDataPerEmployee", "EMP", new { userName = HttpContext.Current.User.Identity.Name.ToString() });}
        @{Html.RenderAction("GetBusinessTripByYearsEMP", "EMP", new { selectedYear = DateTime.Now.ToLocalTimeAzure().Year, userName = HttpContext.Current.User.Identity.Name.ToString() });}
</div>
<div id="tabs2">@{Html.RenderAction("GetVisaDataPerEmployee", "EMP", new { userName = HttpContext.Current.User.Identity.Name.ToString() });}</div>
@{
    if (WebConfigurationManager.AppSettings["IncludeAbsence"] == "true")
    {
        <div id="tabs3">@{Html.RenderAction("GetWTRPerEMP", "WTR");}</div>
    }
}
<div id="tabs5">@{Html.RenderAction("GetBirthdays", "EMP");}</div>
<div id="tabs31">@{Html.RenderAction("GetJourneyDataEMP", "Journey", new { userName = HttpContext.Current.User.Identity.Name.ToString() });}</div>
</div>

    <script>
    $('[href=#tabs3]').click(function (e) {
        e.preventDefault();
        $('#formWTR').submit();
    });
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('[href=#tabs-31]').click(function () {
                $.ajax({
                    cache: false,
                    url: "/Journey/GetJourneyDataEMP",
                    type: "GET",
                    data: { userName: "" },
                    success: function (data) {
                        $("#tabs-31").html($(data));
                    }
                });
            })
        })
    </script>


