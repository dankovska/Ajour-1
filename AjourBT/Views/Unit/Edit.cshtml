@using (Html.BeginForm("Delete", "Unit", new { id = Model.UnitID }, FormMethod.Get))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div style="float:right">
        <button type="submit" id="btnDeleteUnit" data-href="/Unit/Delete/@Model.UnitID" data-title="Delete @Model.ShortTitle" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
            <span>Delete</span>
        </button>

    </div>
}

