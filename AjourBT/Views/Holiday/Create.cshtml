@model AjourBT.Domain.Entities.Holiday

@{
    ViewBag.Title = "Create";
    Layout = null;
}

@using (Html.BeginForm("Create", "Holiday", FormMethod.Post, new { id = "createHolidayForm" }))
{
     @Html.AntiForgeryToken()
    
    <fieldset>
        <legend>Holiday</legend>
        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Country)
                </td>
                <td>
                    @Html.DropDownList("CountryID", (SelectList)ViewBag.CountryList, "<Choose country>", new { id = "dropDownCountry"})
                </td>
                <td><p id="validatorCountryID"></p></td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.Title)</td>
                <td>
                    @Html.EditorFor(model => model.Title)
                </td>
                <td><p id="validatorTitle"></p></td>
            </tr>

            <tr>
                <td>
                   @Html.LabelFor(model => model.HolidayDate)
                </td>
                <td>
                    @Html.EditorFor(model => model.HolidayDate, new { @class = "holidayDateField"})
                </td>
                <td><p id="validatorHolidayDate"></p></td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.IsPostponed)
                </td>
                <td>
                    @Html.CheckBoxFor(model => model.IsPostponed)
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.HolidayComment)</td>
                <td>
                    @Html.EditorFor(model => model.HolidayComment)
                </td>
                <td><p id="validatorHolidayComment"></p></td>
            </tr>
        </table>
    </fieldset>
}
<div style="float:right">
    <button type="submit" id="buttonSaveHoliday" name="Command" value="Save">
        <span>Save</span>
    </button>
</div>