@{
    Layout = null;
}

@using (Ajax.BeginForm("GetJourneyData", "Journey", new AjaxOptions { UpdateTargetId = "journeysView", HttpMethod = "Post" }, new { id = "formJourneys" }))
{
    <div>
        <input id="searchInput" type="search" name="searchString" value="@ViewBag.SearchString" placeholder="Search... "/>
    </div>
}

<div id="journeysView">
    @Html.Action("GetJourneyData", "Journey", new { searchString = ViewBag.SearchString })
</div>
