            <button type="submit" id="btnSaveRegDate"
                    name="Command" value="Save" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
                <span class="ui-button-text">Save</span>
            </button>
        </div>*@
    </fieldset>
}