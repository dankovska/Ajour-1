                            @Html.DisplayFor(model => item.Visa.Entries)
                            (@Html.DisplayFor(model => ((item.Visa.EntriesUsedInPrivateTrips + item.Visa.EntriesUsedInBT + item.Visa.CorrectionForVisaEntries).Value)))
                        </td>
                    }

                    <td>
